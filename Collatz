def collatz(number):
  if number % 2 == 0:
    number = number // 2
    print(number)
    return number
  if number % 2 == 1:
    number = (number * 3) + 1
    print(number)
    return number

print("Enter number:")
x = int(input())
counter = 0
while x != 1:
  x = collatz(x)
  counter += 1
  if x == 1:
    print("Iterations: " + str(counter))
    break
  






