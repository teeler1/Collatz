
#Simple program to convert a list to a string from How to Automate The Boring Stuff With Python
spam = ['apples', 'bananas', 'tofu', 'cats']

def string_comma(some_list):
  
  x = ""
  for i in range(len(some_list)-1):
    x = x + spam[i] + ", "
  x = x + "and " + str(spam[-1])
    
  return x

print(string_comma(spam))


